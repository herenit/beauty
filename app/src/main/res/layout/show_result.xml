<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <ImageView
            android:id="@+id/backImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/backImage"
            android:text="返回"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/nextPic"
            android:text="保存/分享"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/nextPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/next" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:layout_marginBottom="85dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/pic"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp" />

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/pic">

                    <TextView
                        android:id="@+id/one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="肤色肤质："
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/skin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/one"
                        android:text=""
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/one"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/one"
                        android:text=""
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/face"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/two"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/one"
                        android:text=""
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/flaw"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/three"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:text=""
                        android:layout_toRightOf="@+id/four" />

                    <TextView
                        android:id="@+id/two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/one"
                        android:layout_marginTop="10dp"
                        android:text="人生阶段："
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/two"
                        android:layout_marginTop="10dp"
                        android:text="表情："
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/four"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/three"
                        android:layout_marginTop="10dp"
                        android:text="瑕疵指数："
                        android:textSize="16sp" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_below="@+id/pic">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/help" />

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/circle" />

                <TextView
                    android:id="@+id/explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="颜值总分"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/explain"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="#eda7a4"
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ProgressBar
                    android:id="@+id/mouth"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="25dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:max="100"
                    android:progress="60"
                    android:progressDrawable="@drawable/progress_drawable" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mouth"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="嘴"
                    android:textSize="20sp" />

                <ProgressBar
                    android:id="@+id/nose"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="25dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/mouth"
                    android:max="100"
                    android:progress="70"
                    android:progressDrawable="@drawable/progress_drawable" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mouth"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/mouth"
                    android:text="鼻子"
                    android:textSize="20sp" />

                <ProgressBar
                    android:id="@+id/eye"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="25dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/nose"
                    android:max="100"
                    android:progress="40"
                    android:progressDrawable="@drawable/progress_drawable" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mouth"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/nose"
                    android:text="眼睛"
                    android:textSize="20sp" />

                <ProgressBar
                    android:id="@+id/temperament"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="25dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/mouth"
                    android:max="100"
                    android:progress="80"
                    android:progressDrawable="@drawable/progress_drawable" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mouth"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/mouth"
                    android:text="气质"
                    android:textSize="20sp" />

                <ProgressBar
                    android:id="@+id/expression"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="25dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/temperament"
                    android:max="100"
                    android:progress="60"
                    android:progressDrawable="@drawable/progress_drawable" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mouth"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/temperament"
                    android:text="表情"
                    android:textSize="20sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/changeSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/uploadServer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="气质优雅，表情甜美"
        android:textColor="#000000" />

    <RelativeLayout
        android:id="@+id/uploadServer"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/corners_little_pink">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发布到秀场"
            android:textColor="#ffffff"
            android:textSize="17sp" />

    </RelativeLayout>
</RelativeLayout>