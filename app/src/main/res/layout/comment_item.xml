<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/newComment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/currentComment"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/circle" />

        <TextView
            android:id="@+id/honeyNameComment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/icon"
            android:text="17801028290"
            android:lines="1"
            android:textColor="#cbcbcb"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/timeComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/honeyNameComment"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/icon"
            android:text=""
            android:textColor="#cbcbcb"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/picComment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/honeyNameComment"
            android:src="@mipmap/praise" />

        <TextView
            android:id="@+id/praiseNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/picComment"
            android:text="赞（0）"
            android:textColor="#cbcbcb"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/picComment2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/praiseNum"
            android:src="@mipmap/response" />

        <TextView
            android:id="@+id/averageFace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/picComment2"
            android:text="回复"
            android:textColor="#cbcbcb"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/commentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newComment"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="好看"
        android:textColor="#000000"
        android:textSize="20sp" />
</RelativeLayout>